{
  "name": "qms-document-query-app",
  "version": "1.0.0",
  "description": "LLM-powered Natural Language to Neo4j Cypher Query Application",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "mcp": "node --watch src/mcp-server.js",
    "build:mcp": "tsc src/mcp-server.ts --outDir dist",
    "test": "node src/test-llm-cypher.js",
    "test:api": "node src/test-api.js",
    "test:mcp": "node test-mcp.js",
    "test:e2e": "node test-e2e.js",
    "llm": "node src/llm-to-cypher.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run mcp\" \"npm run client\"",
    "client": "cd client && npm run dev",
    "client:build": "cd client && npm run build"
  },
  "keywords": [
    "neo4j",
    "llm",
    "cypher",
    "ollama",
    "natural-language"
  ],
  "author": "QMS Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "neo4j-driver": "^5.24.0",
    "zod": "^3.22.4",
    "@modelcontextprotocol/sdk": "^1.17.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.4.5",
    "concurrently": "^9.0.1"
  }
}
